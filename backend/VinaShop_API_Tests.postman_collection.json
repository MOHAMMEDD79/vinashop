{
  "info": {
    "name": "VinaShop Admin API Tests",
    "description": "Test collection for VinaShop Admin API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api/admin/v1"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Public Tests",
      "item": [
        {
          "name": "Ping",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/test/ping"
          }
        },
        {
          "name": "Database Test",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/test/db"
          }
        },
        {
          "name": "List Tables",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/test/tables"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/health"
          }
        }
      ]
    },
    {
      "name": "2. Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "    console.log('Token saved!');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@vinashop.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Test Auth",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/test/auth"
          }
        }
      ]
    },
    {
      "name": "3. Protected Tests",
      "item": [
